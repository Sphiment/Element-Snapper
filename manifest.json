{
  "name": "Element Screenshot Grabber",
  "description": "Hover, click, and capture an element as a PNG image",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Element Screenshot"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
